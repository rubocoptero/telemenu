extends auth

block auth
  form.signin.form-horizontal(action=actionValue, method="post")
    .form-group
      label.control-label.col-sm-4(for='email') Email
      .col-sm-8
        input.form-control#email(type='email', name="email", placeholder='Email')

    .form-group
      label.control-label.col-sm-4(for='password') Contrase√±a
      .col-sm-8
        input.form-control#password(type='password', name="password", placeholder='Password')

    .form-group
        .col-sm-offset-4.col-sm-8
            button.btn.btn-primary(type='submit') Entrar
            &nbsp;
            | or&nbsp;
            a.show-signup(href="/signup") Registrar
